<section class="main">
  <h1 class="main-header">All articles about <span class="tag"><%= @tag.name %></span></h1>

  <ul class="title-list">
    <% @articles.each do |article| %>
      <li>
        <time datetime="<%= article.created_at.to_datetime.to_s %>" itemprop="datePublished"><%= article.published_at.strftime('%d.%m.%Y') %></time>
        <%= link_to article.title, article_path(article) %>
      </li>
    <% end %>
  </ul>
</section>
